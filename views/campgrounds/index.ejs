<% include ../partials/header %>

<div class="container">
        <div class="jumbotron shadow p-3">

        <div class="container">
            <h1 class="display-3"><i class="fas fa-campground"></i>Welcome to YelpCamp!</h1>
            <p>View our hand-picked campgrounds from all over the world!</p>
                <a name="" id="" class="btn btn-primary" href="/campgrounds/new" role="button">Add New CampGround</a>
        </div>
            
    </div>

    <div class="row">
            <% campgrounds.forEach((campground)=>{%>
            <div class="col-md-6 col-lg-4 col-sm-12">
                <div class="shadow p-3 card text-center mb-4">
                    <img class="card-img-top " src="<%=campground.image%>/400x400/" style = "width: 100%;height: 30vh;object-fit: cover;" alt="">
                    <div class="card-body">
                        <h4 class="card-title"><%= campground.name%></h4>
                    </div>
                    <p>
                    <a  class="shadow p-3 btn btn-primary" href="/campgrounds/<%= campground._id %>" >More Info</a>
                    </p>
                </div>
            </div>
            
        <%})%>        
    </div>


</div>


<% include ../partials/footer %>