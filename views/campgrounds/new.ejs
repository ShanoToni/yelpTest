<% include ../partials/header %>

<div class="container">
    <div class="row">

        <h1 style="text-align: center; margin-top: 40px; width:100%;">Create a new Campground</h1>

        <div style="width:50%; margin:40px auto;">
            <form class="" action="/campgrounds" method="Post">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="price" placeholder="price" min="0.0" step="0.1">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="image url">
                </div>
                <div class="form-group">
                    <label for="exampleFormControlTextarea1">Description</label>
                    <textarea class="form-control" name="description" id="exampleFormControlTextarea1" rows="3"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-success btn-block" type="submit">Submit!</button>
                </div>
                
            </form>    

            <a class="btn btn-warning" href="/campgrounds">Go Back</a> 

        </div>
        

    </div>
    

</div>


<% include ../partials/footer %>